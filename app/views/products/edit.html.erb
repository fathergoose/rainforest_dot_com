<%#= render 'form' %>

<div class="container">
<div class="inner container">
<h1>Update the product:</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag(:name, @product.name, {class: "form-control", placeholder: "Enter the name here!"})%>
  </div>
  <div class="form-group">
    <%= label_tag :unit_cost %>
    <%= text_field_tag :unit_cost, @product.unit_cost, class: "form-control", placeholder: "Enter the unit_cost's name here!" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>
</div>
</div>
